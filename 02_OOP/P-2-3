// Description: Demonstrates Student class with data members and display method

import java.util.Scanner;

class Student
{
    String name;
    int roll;
    Double par;

    void display()
    {
        System.out.println("Student name is ::"+name);
        System.out.println("Student roll number is ::"+roll);
        System.out.println("Student parsentage is  ::"+par);
    }
}
public class P-2-3
{
    public static void main(String [] args)
    {
        Student s=new Student();

        s.name="Zalavadiya sani ";
        s.roll=07;
        s.par=70.87;

        s.display();
    }
}
